<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_language_dialog"
        android:clickable="true"
        android:focusable="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/headerContainerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_header_gdpr"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/appIconImageViewGdpr"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/appNameTextViewGdpr"
                app:layout_constraintEnd_toStartOf="@+id/appNameTextViewGdpr"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/appNameTextViewGdpr" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/appNameTextViewGdpr"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:textColor="@color/colorWhite"
                android:textSize="30sp"
                app:autoSizeMaxTextSize="34sp"
                app:autoSizeMinTextSize="20sp"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toTopOf="@+id/middleDividerHeaderGdpr"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/appIconImageViewGdpr"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/middleDividerHeaderGdpr"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:background="#90FFFFFF"
                app:layout_constraintBottom_toTopOf="@+id/headerInfoTextViewGdpr"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/appIconImageViewGdpr"
                app:layout_constraintTop_toBottomOf="@+id/appNameTextViewGdpr" />

            <ImageView
                android:id="@+id/gdprIconImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_shield"
                app:layout_constraintBottom_toBottomOf="@+id/headerInfoTextViewGdpr"
                app:layout_constraintStart_toStartOf="@+id/appIconImageViewGdpr"
                app:layout_constraintTop_toTopOf="@+id/headerInfoTextViewGdpr" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/headerInfoTextViewGdpr"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/we_care_about_your_privacy"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                app:autoSizeMaxTextSize="80sp"
                app:autoSizeMinTextSize="16sp"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/appNameTextViewGdpr"
                app:layout_constraintTop_toBottomOf="@+id/middleDividerHeaderGdpr" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
            android:id="@+id/containerGDPRInfo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/colorWhite"
            app:layout_constraintBottom_toTopOf="@+id/webViewButtonsSpace"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/headerContainerLayout">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/offlinePrivacyPolicyTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:textColor="#000"
                android:visibility="gone"
                app:autoSizeMaxTextSize="100sp"
                app:autoSizeMinTextSize="10sp"
                app:autoSizeStepGranularity="2sp" />

            <WebView
                android:id="@+id/webViewGdpr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite" />

        </FrameLayout>

        <Space
            android:id="@+id/webViewButtonsSpace"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            app:layout_constraintTop_toBottomOf="@+id/containerGDPRInfo" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/buttonYes"
            android:layout_width="0dp"
            android:layout_height="@dimen/gdpr_button_height"
            android:layout_margin="5dp"
            android:background="@drawable/background_button_gdpr"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/yes_continue_to_see_relevant_ads"
            android:textColor="@color/colorWhite"
            app:autoSizeMaxTextSize="@dimen/max_gdpr_button_text_size"
            app:autoSizeMinTextSize="@dimen/min_gdpr_button_text_size"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toTopOf="@+id/buttonNo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/webViewButtonsSpace"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintWidth_percent="0.8" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/buttonNo"
            android:layout_width="0dp"
            android:layout_height="@dimen/gdpr_button_height"
            android:layout_margin="5dp"
            android:background="@drawable/background_button_gdpr"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/no_see_ads_that_are_less_relevant"
            android:textColor="@color/colorWhite"
            app:autoSizeMaxTextSize="@dimen/max_gdpr_button_text_size"
            app:autoSizeMinTextSize="@dimen/min_gdpr_button_text_size"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toTopOf="@+id/buttonPay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonYes"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintWidth_percent="0.8" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/buttonPay"
            android:layout_width="0dp"
            android:layout_height="@dimen/gdpr_button_height"
            android:layout_margin="5dp"
            android:background="@drawable/background_button_gdpr"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/pay_for_the_ad_free_version"
            android:textColor="@color/colorWhite"
            app:autoSizeMaxTextSize="@dimen/max_gdpr_button_text_size"
            app:autoSizeMinTextSize="@dimen/min_gdpr_button_text_size"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toTopOf="@+id/bottomSpaceGDPR"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonNo"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintWidth_percent="0.8" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/buttonPolicy"
            android:layout_width="0dp"
            android:layout_height="@dimen/gdpr_button_height"
            android:layout_margin="5dp"
            android:background="@drawable/background_button_gdpr"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/i_accept_privacy_policy"
            android:textColor="@color/colorWhite"
            android:visibility="gone"
            app:autoSizeMaxTextSize="@dimen/max_gdpr_button_text_size"
            app:autoSizeMinTextSize="@dimen/min_gdpr_button_text_size"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toTopOf="@+id/buttonBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/webViewButtonsSpace"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintWidth_percent="0.8" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/buttonBack"
            android:layout_width="0dp"
            android:layout_height="@dimen/gdpr_button_height"
            android:layout_margin="5dp"
            android:background="@drawable/background_back_button_gdpr"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/back"
            android:textColor="@color/colorWhite"
            android:visibility="gone"
            app:autoSizeMaxTextSize="@dimen/max_gdpr_button_text_size"
            app:autoSizeMinTextSize="@dimen/min_gdpr_button_text_size"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toTopOf="@+id/bottomSpaceGDPR"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonPolicy"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintWidth_percent="0.8" />

        <Space
            android:id="@+id/bottomSpaceGDPR"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>

