<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/pop_up_portrait_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/background_language_dialog">

    <TextView
            android:id="@+id/surveyTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:gravity="left|center"
            android:minHeight="66dp"
            android:paddingStart="@dimen/medium_space_netigen_api"
            android:paddingLeft="@dimen/medium_space_netigen_api"
            android:paddingEnd="@dimen/medium_space_netigen_api"
            android:paddingRight="@dimen/medium_space_netigen_api"
            android:text="Quick survey"
            android:textColor="#4d4d4d"
            android:textSize="@dimen/title_text_size_netigen_api"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/surveyQuestion1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:minHeight="50dp"
            android:paddingStart="@dimen/medium_space_netigen_api"
            android:paddingLeft="@dimen/medium_space_netigen_api"
            android:paddingEnd="@dimen/medium_space_netigen_api"
            android:paddingRight="@dimen/medium_space_netigen_api"
            android:text="@string/survey_question1_netigen"
            android:textColor="#4d4d4d"
            android:textSize="@dimen/dialogInfoTextSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/surveyTitle" />

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/surveyAnswer1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:hint="@string/your_answer_is_hint_survey_netigen"
            android:minHeight="64dp"
            android:layout_margin="16dp"
            android:textColor="#4d4d4d"
            android:textColorHint="@color/colorAccent"
            android:textSize="@dimen/dialogInfoTextSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/surveyQuestion1" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/surveyQuestion2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:layout_marginTop="24dp"
            android:minHeight="50dp"
            android:paddingStart="@dimen/medium_space_netigen_api"
            android:paddingLeft="@dimen/medium_space_netigen_api"
            android:paddingEnd="@dimen/medium_space_netigen_api"
            android:paddingRight="@dimen/medium_space_netigen_api"
            android:text="@string/survey_question2_netigen"
            android:textColor="#4d4d4d"
            android:textSize="@dimen/dialogInfoTextSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/surveyAnswer1" />

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/surveyAnswer2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="start"
            android:hint="@string/your_answer_is_hint_survey_netigen"
            android:minHeight="64dp"
            android:textColor="#4d4d4d"
            android:textColorHint="@color/colorAccent"
            android:textSize="@dimen/dialogInfoTextSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/surveyQuestion2" />

    <TextView
            android:id="@+id/surveyFragmentCancelTextView"
            style="@style/NeutralDialogButtonNetigenApi"
            android:text="@string/cancel_netigen"
            app:layout_constraintEnd_toStartOf="@+id/surveyFragmentSendTextView"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintTop_toTopOf="@id/surveyFragmentSendTextView" />

    <TextView
            android:id="@+id/surveyFragmentSendTextView"
            style="@style/PositiveDialogButtonNetigenApi"
            android:layout_marginTop="@dimen/big_space_netigen_api"
            android:text="@string/send_netigen"
            android:textColor="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toBottomOf="@id/surveyAnswer2" />
</androidx.constraintlayout.widget.ConstraintLayout>