<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/background_rate_dialog">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="174dp"
            android:alpha="0.2"
            android:background="@drawable/background_rate_top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageView
            android:layout_width="0dp"
            android:layout_height="174dp"
            android:alpha="0.1"
            android:src="@drawable/thanks_top_blob"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/netigen_main_bg_color" />

    <ImageView
            android:id="@+id/topImage"
            android:layout_width="0dp"
            android:layout_height="174dp"
            android:src="@drawable/thanks_top_blob1a"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#141414"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topImage" />

    <TextView
            android:id="@+id/mainText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/rubik_medium"
            android:gravity="center"
            android:minHeight="32dp"
            android:paddingHorizontal="16dp"
            android:text="@string/aks_rate_netigen"
            android:textColor="@color/netigen_main_color_text"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topImage" />
    <TextView
            android:id="@+id/subText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/rubik_regular"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:text="@string/rate_us_netigen_sub_text"
            android:alpha="0.5"
            android:textColor="@color/netigen_main_color_text"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mainText" />

    <TextView
            android:id="@+id/confirmButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/rate_main_button"
            android:fontFamily="@font/rubik_medium"
            android:gravity="center"
            android:text="@string/rate_us_confirm_text_netigen"
            android:textColor="@color/netigen_button_color_text"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subText" />

    <TextView
            android:id="@+id/skip"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="32dp"
            android:alpha="0.5"
            android:background="@drawable/rate_hidden_button"
            android:fontFamily="@font/rubik_medium"
            android:gravity="center"
            android:text="@string/Skip"
            android:textColor="@color/netigen_main_color_text"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/confirmButton" />
</androidx.constraintlayout.widget.ConstraintLayout>
