<resources>

    <!-- Base bannerActivity theme. -->
    <style name="CustomAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorAccent">#FF4081</item>
    </style>

    <style name="Theme.CustomAlertDialog" parent="Base.V7.Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AlertDialogButton">
        <item name="android:background">@drawable/dialog_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="CoffeeDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="SelectedLanguageRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorAccent">@color/radio_button_color_checked</item>
        <item name="android:color">@color/radio_button_color_checked</item>
        <item name="android:textColor">@color/textColorBlack</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>

    <style name="BaseDialogButtonStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">@dimen/button_min_width_netigen_api</item>
        <item name="android:maxWidth">@dimen/button_max_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/button_min_height</item>
        <item name="android:layout_marginLeft">@dimen/medium_space_netigen_api</item>
        <item name="android:layout_marginRight">@dimen/medium_space_netigen_api</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/medium_space_netigen_api</item>
        <item name="android:paddingRight">@dimen/medium_space_netigen_api</item>
        <item name="android:layout_marginBottom">@dimen/medium_space_netigen_api</item>
    </style>

    <style name="NeutralDialogButtonNetigenApi" parent="BaseDialogButtonStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/button_text_size_netigen_api</item>
        <item name="android:backgroundTint">@color/dialog_neutral_button_bg</item>
        <item name="android:background">@drawable/dialog_button_netigen_api</item>
    </style>

    <style name="PositiveDialogButtonNetigenApi" parent="BaseDialogButtonStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/button_text_size_netigen_api</item>
        <item name="android:backgroundTint">@color/dialog_accent</item>
        <item name="android:background">@drawable/dialog_button_netigen_api</item>
    </style>

    <style name="GDPR_BaseDialogButtonStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:minHeight">@dimen/button_min_height</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/medium_space_netigen_api</item>
        <item name="android:layout_marginRight">@dimen/medium_space_netigen_api</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">@dimen/button_min_width_netigen_api</item>
        <item name="android:paddingLeft">@dimen/medium_space_netigen_api</item>
        <item name="android:paddingRight">@dimen/medium_space_netigen_api</item>
        <item name="android:layout_marginBottom">@dimen/small_space_netigen_api</item>
    </style>

    <style name="GDPR_AccentTextButton" parent="GDPR_BaseDialogButtonStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:backgroundTint">@color/dialog_accent</item>
        <item name="android:textSize">@dimen/button_text_size_netigen_api</item>
        <item name="android:background">@drawable/dialog_button_netigen_api</item>
    </style>

    <style name="GDPR_NeutralTextButton" parent="GDPR_BaseDialogButtonStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/button_text_size_netigen_api</item>
        <item name="android:backgroundTint">@color/dialog_neutral_button_bg</item>
        <item name="android:background">@drawable/dialog_button_netigen_api</item>
    </style>

    <style name="GDPR_BoldTextButton" parent="GDPR_BaseDialogButtonStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/button_text_size_netigen_api</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:backgroundTint">@color/dialog_neutral_button_bg</item>
        <item name="android:background">@drawable/dialog_button_netigen_api</item>
    </style>

    <style name="DialogTitleTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">66dp</item>
        <item name="android:layout_marginLeft">@dimen/medium_space_netigen_api</item>
        <item name="android:layout_marginRight">@dimen/medium_space_netigen_api</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/dialog_text_view</item>
        <item name="android:textSize">@dimen/title_text_size_netigen_api</item>
        <item name="android:gravity">center|start</item>
    </style>

    <style name="GDPR_AppName" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginLeft">@dimen/medium_space_netigen_api</item>
        <item name="android:layout_marginRight">@dimen/medium_space_netigen_api</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/title_text_size_netigen_api</item>
        <item name="android:gravity">center|start</item>
    </style>
</resources>