<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_language_dialog"
        android:clickable="true"
        android:focusable="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/headerContainerLayout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/background_header_gdpr"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Space
                android:id="@+id/landSpaceHeaderTop"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/appIconImageViewGdpr"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="8dp"
                app:layout_constraintBottom_toTopOf="@+id/landSpaceHeaderBottom"
                app:layout_constraintEnd_toStartOf="@+id/appNameTextViewGdpr"
                app:layout_constraintTop_toBottomOf="@+id/landSpaceHeaderTop" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/appNameTextViewGdpr"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:gravity="center_vertical"
                android:textColor="@color/colorWhite"
                android:textSize="30sp"
                app:autoSizeMaxTextSize="30sp"
                app:autoSizeMinTextSize="18sp"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toTopOf="@+id/landSpaceHeaderBottom"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/landSpaceHeaderTop"
                app:layout_constraintWidth_percent="0.2" />

            <View
                android:id="@+id/middleDividerHeaderGdpr"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:background="#90FFFFFF"
                app:layout_constraintBottom_toTopOf="@+id/landSpaceHeaderBottom"
                app:layout_constraintEnd_toStartOf="@+id/appIconImageViewGdpr"
                app:layout_constraintTop_toBottomOf="@+id/landSpaceHeaderTop" />

            <ImageView
                android:id="@+id/gdprIconImageView"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/ic_shield"
                app:layout_constraintBottom_toTopOf="@+id/landSpaceHeaderBottom"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@+id/headerInfoTextViewGdpr"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/landSpaceHeaderTop" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/headerInfoTextViewGdpr"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:lines="3"
                android:maxLines="3"
                android:text="@string/we_care_about_your_privacy_netigen"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                app:autoSizeMaxTextSize="30sp"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeStepGranularity="2sp"
                android:gravity="left|center"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toTopOf="@+id/landSpaceHeaderBottom"
                app:layout_constraintEnd_toStartOf="@+id/appIconImageViewGdpr"
                app:layout_constraintStart_toEndOf="@+id/gdprIconImageView"
                app:layout_constraintTop_toBottomOf="@+id/landSpaceHeaderTop" />

            <Space
                android:id="@+id/landSpaceHeaderBottom"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
            android:id="@+id/containerGDPRInfo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/colorWhite"
            app:layout_constraintBottom_toTopOf="@+id/webViewButtonsSpace"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/headerContainerLayout">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/offlinePrivacyPolicyTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:textColor="#000"
                android:visibility="gone"
                app:autoSizeMaxTextSize="100sp"
                app:autoSizeMinTextSize="10sp"
                app:autoSizeStepGranularity="2sp" />

            <WebView
                android:id="@+id/webViewGdpr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite" />

        </FrameLayout>

        <Space
            android:id="@+id/webViewButtonsSpace"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            app:layout_constraintBottom_toTopOf="@+id/landscapeButtonsContainer" />

        <Space
            android:id="@+id/startButtonsSpace"
            android:layout_width="16dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/bottomSpaceGDPR"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/webViewButtonsSpace" />

        <Space
            android:id="@+id/endButtonsSpace"
            android:layout_width="16dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/bottomSpaceGDPR"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/webViewButtonsSpace" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/landscapeButtonsContainer"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toTopOf="@id/bottomSpaceGDPR"
            app:layout_constraintEnd_toStartOf="@id/endButtonsSpace"
            app:layout_constraintStart_toEndOf="@id/startButtonsSpace">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/buttonNo"
                android:layout_width="0dp"
                android:layout_height="@dimen/gdpr_button_height"
                android:layout_margin="5dp"
                android:background="@drawable/background_button_gdpr"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/no_see_ads_that_are_less_relevant_netigen"
                android:textColor="@color/colorWhite"
                app:autoSizeMaxTextSize="@dimen/max_gdpr_button_text_size"
                app:autoSizeMinTextSize="@dimen/min_gdpr_button_text_size"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/buttonPay"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@id/buttonYes"

                app:layout_constraintTop_toTopOf="parent"

                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/buttonYes"
                android:layout_width="0dp"
                android:layout_height="@dimen/gdpr_button_height"
                android:layout_margin="5dp"
                android:background="@drawable/background_button_gdpr"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/yes_continue_to_see_relevant_ads_netigen"
                android:textColor="@color/colorWhite"
                app:autoSizeMaxTextSize="@dimen/max_gdpr_button_text_size"
                app:autoSizeMinTextSize="@dimen/min_gdpr_button_text_size"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/buttonNo"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/buttonPay"
                android:layout_width="0dp"
                android:layout_height="@dimen/gdpr_button_height"
                android:layout_margin="5dp"
                android:background="@drawable/background_button_gdpr"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/pay_for_the_ad_free_version_netigen"
                android:textColor="@color/colorWhite"
                app:autoSizeMaxTextSize="@dimen/max_gdpr_button_text_size"
                app:autoSizeMinTextSize="@dimen/min_gdpr_button_text_size"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@id/buttonNo"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/buttonPolicy"
                android:layout_width="0dp"
                android:layout_height="@dimen/gdpr_button_height"
                android:layout_margin="5dp"
                android:background="@drawable/background_button_gdpr"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/i_accept_privacy_policy_netigen"
                android:textColor="@color/colorWhite"
                android:visibility="gone"
                app:autoSizeMaxTextSize="@dimen/max_gdpr_button_text_size"
                app:autoSizeMinTextSize="@dimen/min_gdpr_button_text_size"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/buttonBack"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/buttonBack"
                android:layout_width="0dp"
                android:layout_height="@dimen/gdpr_button_height"
                android:layout_margin="5dp"
                android:background="@drawable/background_back_button_gdpr"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/back_netigen"
                android:textColor="@color/colorWhite"
                android:visibility="gone"
                app:autoSizeMaxTextSize="@dimen/max_gdpr_button_text_size"
                app:autoSizeMinTextSize="@dimen/min_gdpr_button_text_size"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/buttonPolicy"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Space
            android:id="@+id/bottomSpaceGDPR"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>

